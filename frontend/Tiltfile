k8s_yaml('kubernetes.yaml', allow_duplicates=True)
k8s_resource('hello-tilt-front', port_forwards=['8081:80'], resource_deps=['script-front'], labels=['front', 'app1'])
# k8s_resource('hello-tilt-front', port_forwards=['4200:4200'])