# -*- mode: Python -*-

# For more on Extensions, see: https://docs.tilt.dev/extensions.html
load('ext://restart_process', 'docker_build_with_restart')

# Records the current time, then kicks off a server update.
# Normally, you would let Tilt do deploys automatically, but this
# shows you how to set up a custom workflow that measures it.
# local_resource(
#     'deploy',
#     'python ./record-start-time.py',
#     deps=['./record-start-time.py'],
# )

local_resource(
    'pkgs-front',
    'npm install',
    # deps=['package-lock.json'],
    # ignore=['TiltDemoApi/obj', 'TiltDemoApi/bin'],
    # resource_deps=['deploy'],
    labels=['front', 'app1']
)

local_resource(
    'build-front',
    # 'echo success',
    serve_cmd='ng build --watch --configuration=development --delete-output-path=false --base-href=/front/',
    # deps=['src'],
    # ignore=['TiltDemoApi/obj', 'TiltDemoApi/bin'],
    resource_deps=['pkgs-front'],
    labels=['front', 'app1']
)

local_resource(
    'script-front',
    'cp ./nginx.conf ./dist',
    deps=['nginx.conf'],
    resource_deps=['build-front'],
    labels=['front', 'app1']
)

docker_build_with_restart(
    'hello-tilt-front',
    'dist',
    entrypoint=["nginx", "-g", "daemon off;"],
    # entrypoint=["/app/script.sh"],
    dockerfile='Dockerfile',
    live_update=[
        sync('dist/frontend', '/usr/share/nginx/html'),
    ],
)

